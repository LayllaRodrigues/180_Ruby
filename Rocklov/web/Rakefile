      { name: "Laylla Rodrigues", email: "laylla.rodrigues@hotmail.com", password: to_md5("pwd123") },
      { name: "Laylla Rodrigues", email: "laylla1@hotmail.com", password: to_md5("pwd123") },
    ]

    MongoDB.new.drop_danger
    MongoDB.new.insert_users(users)
end